# OpenTelemetry Configuration
# Copy this file to .env.local and customize as needed

# Service identification
OTEL_SERVICE_NAME=sub-editor
OTEL_SERVICE_VERSION=0.0.1

# Enable/disable different exporters
ENABLE_JAEGER=false
ENABLE_OTLP=false

# Jaeger configuration
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# OTLP configuration
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics

# Trace sampling
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

# Resource attributes
OTEL_RESOURCE_ATTRIBUTES=service.name=sub-editor,service.version=0.0.1,deployment.environment=development

# Development mode (enables console exporter)
NODE_ENV=development
