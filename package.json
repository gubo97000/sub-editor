		"@sveltejs/vite-plugin-svelte": "^4.0.2",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "next",
		"prettier": "^3.4.0",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.2.8",
		"svelte-check": "^4.1.0",
