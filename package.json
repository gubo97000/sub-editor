		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "next",
		"node-network-devtools": "^1.0.25",
		"prettier": "^3.5.1",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.20.1",
		"svelte-check": "^4.1.4",
